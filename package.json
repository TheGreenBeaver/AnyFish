{
  "name": "any-fish",
  "version": "0.0.1",
  "description": "Utility React Hooks for any purpose",
  "keywords": [
    "react",
    "reactjs",
    "hooks",
    "hook",
    "usePromise",
    "persistent state",
    "isMounted",
    "element size",
    "util",
    "utility"
  ],
  "homepage": "https://github.com/TheGreenBeaver/any-fish#readme",
  "bugs": {
    "url": "https://github.com/TheGreenBeaver/any-fish/issues"
  },
  "license": "MIT",
  "author": "https://github.com/TheGreenBeaver",
  "files": [
    "./lib"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheGreenBeaver/any-fish.git"
  },
  "scripts": {
    "build:base": "tsc -p ./tsconfig.prod.json",
    "build:esm": "yarn build:base --outDir lib/esm",
    "build:cjs": "yarn build:base --outDir lib/cjs --module commonjs",
    "build": "yarn build:esm && yarn build:cjs",
    "test:functional": "jest",
    "test:visual": "cypress run --component",
    "lint:main": "eslint src tests utils",
    "lint:cypress": "eslint cypress --parser-options=project:./cypress/tsconfig.json"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "cypress": "^10.11.0",
    "eslint": "^8.25.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.2.0",
    "jest-environment-jsdom": "^29.2.0",
    "pnp-webpack-plugin": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-dev-server": "^4.11.1"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "packageManager": "yarn@3.2.4"
}
